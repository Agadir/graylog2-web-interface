<div id="universal-search">
  <form action="<%= universalsearch_messages_path %>" method="GET">
    <% if @stream %><input type="hidden" name="stream_id" value="<%= @stream.id %>" /><% end %>
    <% if @host %><input type="hidden" name="host" value="<%= @host.host %>" /><% end %>

    <input type="text" id="universal-search-field"
          name="query"
          data-stdval='Type your search query here and press enter. ("not found" AND http) OR _http_response_code:[400 TO *]'
          <% if !params[:query].blank? %>
            value="<%= params[:query] %>"
          <% end %>
           />
  </form>
</div>

